    </div>
    {{#each cartProductList}}
        <h3>{{product.title}}</h3>
        <p>Description: {{product.description}}</p>
        <p>Price: ${{product.price}}</p>
        <p>Quantity: {{quantity}}</p>
        <p>Category: {{product.category}}</p>        
        <br>
        <br>
    {{/each}}
    <div id="total-container"> 
        <p>total:${{total}}</p>       
    </div>
